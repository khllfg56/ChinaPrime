<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="2dp">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivImageLeft"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        />
                    <TextView
                        android:id="@+id/tvPriceLeft"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#ececec"
                        android:layout_below="@id/ivImageLeft"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:layout_below="@+id/tvPriceLeft"
                        android:background="#ececec">

                        <CheckBox
                            android:id="@+id/cbSaveLeft"
                            android:layout_width="0dp"
                            android:button="@android:drawable/btn_star"
                            android:text="Save"
                            android:textSize="12dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#ffffff"/>
                        <TextView
                            android:id="@+id/tvBuyLeft"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Buy"
                            android:textSize="12dp"
                            android:gravity="center"
                            android:textColor="#000000"/>
                    </LinearLayout>
                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="2dp">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivImageRight"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        />
                    <TextView
                        android:id="@+id/tvPriceRight"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#ececec"
                        android:layout_below="@id/ivImageRight"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:layout_below="@+id/tvPriceRight"
                        android:background="#ececec">

                        <CheckBox
                            android:id="@+id/cbSaveRight"
                            android:layout_width="0dp"
                            android:button="@android:drawable/btn_star"
                            android:textSize="12dp"
                            android:text="Save"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#ffffff"/>
                        <TextView
                            android:id="@+id/tvBuyRight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Buy"
                            android:textSize="12dp"
                            android:textColor="#000000"
                            android:gravity="center"/>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
